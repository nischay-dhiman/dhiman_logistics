<%- if inventory_items.blank? %>
  <p style="text-align: center">
    No Inventory Items Found, Create one
  </p>
<% else %>
  <div style="overflow-x:auto;">
    <table>
      <tr>
        <th>Status</th>
        <th>Item code</th>
        <th>Price</th>
        <th>Price per unit</th>
        <th>Quantity</th>
        <th>Weight</th>
        <th colspan=3 style="text-align: center">Actions</th>
      </tr>
      <% inventory_items.each do |inventory_item| %>
        <tr>
          <td><%= inventory_item.status %></td>
          <td><%= inventory_item.item_code %></td>
          <td><%= inventory_item.price %></td>
          <td><%= inventory_item.price_per_unit %></td>
          <td><%= inventory_item.quantity %></td>
          <td><%= inventory_item.weight %></td>
          <td><%= link_to 'Show', inventory_item %></td>
          <td><%= link_to 'Edit', edit_inventory_item_path(inventory_item) %></td>
          <td><%= button_to 'Delete', inventory_item, method: :delete, class: 'delete_button' %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
